<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="10dp"
    tools:context=".view.MainActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_dot"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="."
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_0"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="0"
            android:textAppearance="@style/TextAppearanceButton" />

        <ImageButton
            android:id="@+id/bt_backspace"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:src="@drawable/ic_outline_backspace_24"
            android:text=""
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_result"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_high"
            android:text="="
            android:textAppearance="@style/TextAppearanceButton" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d16"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="1"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_2"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="2"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="3"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_plus"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_high"
            android:text="+"
            android:textAppearance="@style/TextAppearanceButton" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d16"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_4"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="4"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_5"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="5"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_6"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="6"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_sub"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_high"
            android:text="-"
            android:textAppearance="@style/TextAppearanceButton" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d16"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="@dimen/d16">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_7"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="7"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_8"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="8"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_9"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_low"
            android:text="9"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_mul"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_high"
            android:text="*"
            android:textAppearance="@style/TextAppearanceButton" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d16"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_clear"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_medium"
            android:text="C"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_log"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_medium"
            android:text="log("
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_div_remainder"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginEnd="@dimen/d16"
            android:layout_weight="1"
            android:background="@drawable/bg_button_medium"
            android:text="%"
            android:textAppearance="@style/TextAppearanceButton" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_div"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_high"
            android:text="/"
            android:textAppearance="@style/TextAppearanceButton" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d16"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:fontFamily="@font/worksans_medium"
        android:textFontWeight="300"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat5"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="p" />

    <EditText
        android:id="@+id/et_expression"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/worksans_medium"
        android:maxLines="2"
        android:background="@null"
        android:textColor="@color/white"
        android:textFontWeight="300"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_result"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        tools:targetApi="p" />

</androidx.constraintlayout.widget.ConstraintLayout>